<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    Shell.NavBarIsVisible="False"
    x:Class="Ficbook.Views.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <StackLayout>
        <Frame HeightRequest="60" Padding="0,0,3,7">
            <SearchBar
                CancelButtonColor="Black"
                Margin="3,3,3,3"
                Placeholder="Search stories/authors/genres..."
                Text="{Binding SearchText}"
                TextChanged="SearchBarTextChanged" />
        </Frame>
        <RefreshView Command="{Binding RefreshCommand}" IsRefreshing="{Binding IsRefreshing}">
            <ScrollView>
                <StackLayout>
                    <StackLayout Margin="5,5,5,5">
                        <Label FontSize="Title" Text="Genres" />
                        <ScrollView Orientation="Horizontal">
                            <CollectionView
                                ItemsLayout="HorizontalList"
                                ItemsSource="{Binding Genres}"
                                SelectionMode="Single">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <StackLayout
                                            Margin="0,3,3,3"
                                            Orientation="Horizontal"
                                            Padding="2,2,2,2">
                                            <Frame
                                                CornerRadius="20"
                                                HeightRequest="30"
                                                Padding="0,2,0,0"
                                                WidthRequest="120">
                                                <Label HorizontalOptions="Center" Text="{Binding Name}" />
                                            </Frame>
                                        </StackLayout>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </ScrollView>
                    </StackLayout>

                    <StackLayout IsVisible="{Binding FavouriteStoriesStatus}" Margin="5,5,5,5">
                        <Label FontSize="Title" Text="Favourite stories" />
                        <ScrollView Orientation="Horizontal">
                            <CollectionView
                                ItemsLayout="HorizontalList"
                                ItemsSource="{Binding FavouriteStories}"
                                SelectionChanged="StorySelected"
                                SelectionMode="Single">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <StackLayout
                                            HeightRequest="180"
                                            Margin="0,3,3,3"
                                            Padding="2,2,2,2"
                                            WidthRequest="100">
                                            <Frame
                                                CornerRadius="20"
                                                HeightRequest="160"
                                                Padding="0,0,0,0"
                                                WidthRequest="100">
                                                <Image
                                                    HeightRequest="160"
                                                    Source="Ficbook/Resources/Images/story.png"
                                                    WidthRequest="110" />
                                            </Frame>
                                            <Label Text="{Binding Title}" />
                                        </StackLayout>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </ScrollView>
                    </StackLayout>

                    <StackLayout>
                        <Label FontSize="Title" Text="Stories from other authors" />
                        <CollectionView
                            ItemsSource="{Binding AllWritersStories}"
                            SelectionChanged="StorySelected"
                            SelectionMode="Single">
                            <CollectionView.ItemsLayout>
                                <GridItemsLayout Orientation="Vertical" Span="2" />
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <StackLayout
                                        HorizontalOptions="FillAndExpand"
                                        Margin="0,3,3,3"
                                        Padding="2,2,2,2"
                                        VerticalOptions="FillAndExpand">
                                        <Frame
                                            CornerRadius="20"
                                            HeightRequest="280"
                                            HorizontalOptions="FillAndExpand"
                                            Padding="0,0,0,0"
                                            VerticalOptions="FillAndExpand">
                                            <Image
                                                HorizontalOptions="FillAndExpand"
                                                Source="Ficbook/Resources/Images/story.png"
                                                VerticalOptions="FillAndExpand" />
                                        </Frame>
                                        <Label Text="{Binding Title}" />
                                    </StackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </StackLayout>


