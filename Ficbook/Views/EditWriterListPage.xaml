<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    x:Class="Ficbook.Views.EditWriterListPage"
    x:DataType="viewModels:EditWriterViewModel"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:viewModels="clr-namespace:Ficbook.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <StackLayout>
        <Picker
            ItemDisplayBinding="{Binding Name}"
            ItemsSource="{Binding Writers}"
            SelectedItem="{Binding SelectedWriter}" />
        <Button Command="{Binding BanWriterCommand}" Text="Ban user" />
        <Button Command="{Binding UnbanWriterCommand}" Text="Unban user" />
    </StackLayout>


</ContentPage>